<%- model_class = Sensor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ref) %>:</strong></dt>
  <dd><%= @sensor.ref %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @sensor.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sensor_type_id) %>:</strong></dt>
  <dd><%= @sensor.sensor_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:green_kub_box_id) %>:</strong></dt>
  <dd><%= @sensor.green_kub_box_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sensors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sensor_path(@sensor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sensor_path(@sensor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
