<%- model_class = SensorType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <% if(current_user.isAdmin) %>
        <th><%= model_class.human_attribute_name(:id) %></th>
      <% end %>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:caracteristics) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <% if(current_user.isAdmin) %>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @sensor_types.each do |sensor_type| %>
      <tr>
        <% if(current_user.isAdmin) %>
            <td><%= link_to sensor_type.id, sensor_type_path(sensor_type) %></td>
        <% end %>
        <td><%= sensor_type.name %></td>
        <td><%= sensor_type.caracteristics %></td>
        <td><%= sensor_type.unit %></td>
        <% if(current_user.isAdmin) %>
            <td><%=l sensor_type.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_sensor_type_path(sensor_type), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          sensor_type_path(sensor_type),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if(current_user.isAdmin) %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_sensor_type_path,
                :class => 'btn btn-primary' %>
<% end %>