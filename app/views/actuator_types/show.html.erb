<%- model_class = ActuatorType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @actuator_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:caracteristics) %>:</strong></dt>
  <dd><%= @actuator_type.caracteristics %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              actuator_types_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actuator_type_path(@actuator_type), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actuator_type_path(@actuator_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
