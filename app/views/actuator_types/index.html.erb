<%- model_class = ActuatorType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <% if(current_user.isAdmin) %>
        <th><%= model_class.human_attribute_name(:id) %></th>
      <% end %>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:caracteristics) %></th>
      <% if(current_user.isAdmin) %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @actuator_types.each do |actuator_type| %>
      <tr>
        <% if(current_user.isAdmin) %>
            <td><%= link_to actuator_type.id, actuator_type_path(actuator_type) %></td>
        <% end %>
        <td><%= actuator_type.name %></td>
        <td><%= actuator_type.caracteristics %></td>
        <% if(current_user.isAdmin) %>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_actuator_type_path(actuator_type), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          actuator_type_path(actuator_type),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if(current_user.isAdmin) %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_actuator_type_path,
            :class => 'btn btn-primary' %>
<% end %>