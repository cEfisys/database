<p id="notice"><%= notice %></p>

<h1>Listing Actuators</h1>

<table>
  <thead>
    <tr>
      <th>Ref</th>
      <th>State</th>
      <th>Actuators type</th>
      <th>Greenkub box</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actuators.each do |actuator| %>
      <tr>

        <td><%= actuator.ref %></td>
        <td><%= actuator.state %></td>
        <td><%= actuator.actuator_type.name%></td>
        <td><%= actuator.green_kub_box.name %></td>
        <td><%= link_to 'Show', actuator %></td>
        <td><%= link_to 'Edit', edit_actuator_path(actuator) %></td>
        <td><%= link_to 'Destroy', actuator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

