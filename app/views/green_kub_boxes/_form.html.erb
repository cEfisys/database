<%= form_for @green_kub_box, :html => { :class => "form-horizontal green_kub_box" } do |f| %>

  <% if @green_kub_box.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@green_kub_box.errors.count, "error") %> prohibited this green_kub_box from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @green_kub_box.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Serial_Number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :Serial_Number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:Serial_Number) %>
  </div>
  <div class="form-group">
    <%= f.label :model_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <!--<%= f.text_field :model_id, :class => 'form-control' %>-->
      <%= f.select("model_id", Model.all.collect {|p| [ p.name, p.id ]}, :class => 'form-control' ) %>
    </div>
    <%=f.error_span(:model_id) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>

    <div class="col-lg-10">
      <!--<%= f.text_field :user_id, :class => 'form-control' %>-->
      <%= f.select("user_id", User.all.collect {|p| [ p.email, p.id ] },  :class => 'control-label col-lg-2') %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                green_kub_boxes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
