<%- model_class = Actuator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ref) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:actuator_type_id) %></th>
      <th><%= model_class.human_attribute_name(:green_kub_box_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @actuators.each do |actuator| %>
      <tr>
        <td><%= link_to actuator.id, actuator_path(actuator) %></td>
        <td><%= actuator.ref %></td>
        <td><%= actuator.state %></td>
        <td><%= actuator.actuator_type_id %></td>
        <td><%= actuator.green_kub_box_id %></td>
        <td><%=l actuator.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_actuator_path(actuator), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      actuator_path(actuator),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_actuator_path,
            :class => 'btn btn-primary' %>
